<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/user_gravatar_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:outlineProvider="bounds"
            android:elevation="3dp"/>

        <TextView
            android:id="@+id/user_display_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_gravatar_image_view"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorLink"/>

        <TextView
            android:id="@+id/user_location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_display_name_text_view"
            android:layout_alignStart="@+id/user_display_name_text_view"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_location_text_view"
            android:layout_alignStart="@+id/user_display_name_text_view"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/user_rep_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/gold_badge_image_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/user_rep_text_view"
                android:src="@drawable/gold_badge"/>

            <TextView
                android:id="@+id/gold_badge_count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/gold_badge_image_view" />

            <ImageView
                android:id="@+id/silver_badge_image_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/gold_badge_count_text_view"
                android:layout_centerVertical="true"
                android:src="@drawable/silver_badge"/>

            <TextView
                android:id="@+id/silver_badge_count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/silver_badge_image_view" />

            <ImageView
                android:id="@+id/bronze_badge_image_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/silver_badge_count_text_view"
                android:layout_centerVertical="true"
                android:src="@drawable/bronze_badge"/>

            <TextView
                android:id="@+id/bronze_badge_count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/bronze_badge_image_view" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>